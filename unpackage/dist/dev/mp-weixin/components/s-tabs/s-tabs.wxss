.s-tabs {
  width: 100%;
  position: relative;
  overflow-x: hidden;
  font-size: 28rpx;
}
.s-tabs .s-tabs-nav-wrap {
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background: #ffffff;
  white-space: nowrap;
}
.s-tabs .s-tabs-nav-wrap .scroll-view {
  height: 100%;
  position: relative;
}
.s-tabs .s-tabs-nav-wrap .scroll-view ::-webkit-scrollbar {
  display: none;
}
.s-tabs .s-tab-nav {
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  height: 100%;
  font-size: 28rpx;
  padding: 0 30rpx;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  box-sizing: border-box;
  cursor: pointer;
}
.s-tabs .s-tab-line {
  position: absolute;
  bottom: 20px;
  border-radius: 6rpx;
  -webkit-transition: all 0.3s;
  transition: all 0.3s;
}
.s-tabs .s-tabs-content-wrap {
  white-space: nowrap;
}

